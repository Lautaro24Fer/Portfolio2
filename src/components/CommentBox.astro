---
interface Props {
  text: string;
}

import { ArrowDrawIcon } from "../util/icons";
const { text } = Astro.props;
---

<div class="box-comments absolute">
  <ArrowDrawIcon />
  <p>{text}</p>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Comfortaa:wght@300..700&display=swap");
  .box-comments {
    font-family: "Architects Daughter", cursive;
    font-weight: 400;
    font-style: normal;
    display: flex;
    align-items: start;
    width: 12rem;
    height: max-content;
    gap: 0.5rem;
  }
</style>
