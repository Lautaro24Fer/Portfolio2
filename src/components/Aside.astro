---
import ButtonCloseAside from "./ButtonCloseAside.astro";
---

<aside
  class="fixed h-screen w-2/5 left-0 top-0 z-30 text-white p-7"
  style={{ borderRight: "1px solid white" }}
>
  <ButtonCloseAside />
  <h2 class="font-bold text-3xl">Lautaro Leonel Fern√°ndez</h2>
  <hr class="mt-3 mb-5 w-3/5" />
  <ul class="font-light flex flex-col w-full gap-5 text-2xl">
    {"yourNewEmployee: {"}
    <li>age: 21,</li>
    <li>country: "Argentina",</li>
    <li>residency: "Argentina",</li>
    <li>status: "Student",</li>
    <li>languages: ["English", "Spanish"],</li>
    <li>level: "Junior"</li>
    {"}"}
  </ul>
  <button
    class="btn-downloadcv bg-transparent mt-6 px-4 py-2 rounded-full"
    style={{ border: "1px solid white" }}
  >
    Download CV
  </button>
  <button
    class="btn-checklinkdin bg-transparent mt-6 px-4 py-2 rounded-full"
    style={{ border: "1px solid white" }}
  >
    Check LinkedIn
  </button>
</aside>

<style>
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");
  aside {
    background: rgba(0, 0, 0, 0.515);
    -webkit-backdrop-filter: blur(5px);
    backdrop-filter: blur(5px);
    left: -100%;
    transition: all 0.2s ease-in;
    overflow-y: auto;
    font-family: "IBM Plex Mono", monospace;
    font-weight: 400;
    font-style: normal;
  }

  .btn-downloadcv,
  .btn-checklinkdin {
    transition: all 0.1s ease-in-out;
  }

  .btn-downloadcv:hover {
    background-color: whitesmoke;
    color: black;
    font-weight: bold;
    -webkit-box-shadow: 1px 1px 35px -17px rgba(255, 255, 255, 0.844);
    -moz-box-shadow: 1px 1px 35px -17px rgba(255, 255, 255, 0.844);
    box-shadow: 1px 1px 35px -17px rgba(255, 255, 255, 0.844);
  }

  .btn-checklinkdin:hover {
    background-color: rgb(58, 75, 255);
    font-weight: bold;
    -webkit-box-shadow: 1px 1px 35px -17px rgba(107, 184, 212, 0.844);
    -moz-box-shadow: 1px 1px 35px -17px rgba(107, 184, 212, 0.844);
    box-shadow: 1px 1px 35px -17px rgba(107, 184, 212, 0.844);
  }

  .activated {
    left: 0;
    animation: bouncy 0.6s ease-in-out;
  }

  @keyframes bouncy {
    0% {
      transform: translateX(-100%);
    }
    33% {
      transform: translateX(-50%);
    }
    50% {
      transform: translateX(0px);
    }
    65% {
      transform: translateX(-7px);
    }
    80% {
      transform: translateX(-15px);
    }
    80% {
      transform: translateX(-5px);
    }
    100% {
      transform: translateX(0px);
    }
  }
</style>
