---
import CommentBox from "./CommentBox.astro";
import CarouselProjects from "./CarouselProjects.astro";
---

<section class="container-projects text-white relative w-full">
  <div class="commentBoxContainer">
    <CommentBox text="Press here to see all my work" orientation="left" />
  </div>
  <div class="flex justify-between items-center">
    <h2 class="text-3xl">My recent work</h2>
    <a href="/projects" class="text-blue-500 font-bold">All proyects</a>
  </div>
  <div
    class="h-80 w-full flex justify-center items-center bgLastProyect rounded-lg mt-5"
  >
    <!-- <div
      class="flex justify-center items-center rounded-lg p-5 h-full w-max shadow-md shadow-slate-800 bgLastProyectImgContainer"
      style={{ backgroundColor: "rgb(16, 16, 16)" }}
    >
      <img
        src="/x-miniatura-compr.png"
        alt="last project released"
        class="h-full lastProyectImg"
      /> -->
    <CarouselProjects />
    <div id="section_habilities"></div>
  </div>
</section>

<style>
  .commentBoxContainer {
    right: 0;
    top: 0;
    margin-right: -4em;
    position: absolute;
  }

  .bgLastProyect {
    background: rgb(197, 90, 90);
    background: linear-gradient(
      90deg,
      rgba(197, 90, 90, 1) 11%,
      rgba(162, 135, 100, 1) 28%,
      rgba(186, 143, 59, 1) 51%,
      rgba(136, 195, 184, 1) 100%
    );
  }

  .bgLastProyectImgContainer {
    transition: all 0.2s ease-in-out;
  }

  .bgLastProyectImgContainer:hover {
    scale: 0.95;
  }
</style>
